<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="colors.Views.ProjectsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:colors.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource AppBackgroundBrush}">

    <Page.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <MenuFlyout x:Key="PaletteMenuFlyout">
            <MenuFlyoutItem Text="Delete" Click="DeleteInProjectPalette_Click" Tag="{Binding}"/>
            <MenuFlyoutItem Text="Copy JSON" Click="CopyInProjectJson_Click" Tag="{Binding}"/>
        </MenuFlyout>
    </Page.Resources>

    <Grid>
        <!-- View 1: Projects List -->
        <Grid x:Name="ProjectsListContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <StackPanel Grid.Row="0" Padding="16" Spacing="8">
                <TextBlock Text="Projects" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                <Button 
                    x:Name="NewProjectButton"
                    Content="+ New Project" 
                    Click="NewProjectButton_Click"
                    HorizontalAlignment="Stretch"
                    Style="{StaticResource AccentButtonStyle}"/>
            </StackPanel>

            <!-- Projects List -->
            <ListView x:Name="ProjectsList" Grid.Row="1" Padding="16,0,16,16" SelectionMode="Single" SelectionChanged="ProjectsList_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,8" Padding="12" Background="{StaticResource CardBackgroundBrush}" CornerRadius="8">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                                <TextBlock Text="{Binding Description}" FontSize="12" Foreground="{StaticResource TextFillColorSecondaryBrush}" MaxLines="1" TextTrimming="CharacterEllipsis" Visibility="{Binding Description, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>
                            <FontIcon Grid.Column="1" Glyph="&#xE76C;" FontSize="12" Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,0,0,4"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
             <StackPanel x:Name="EmptyProjectsState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                 <TextBlock Text="No projects yet" Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Grid>

        <!-- View 2: Project Details (List of Palettes) -->
        <Grid x:Name="ProjectDetailsContainer" Visibility="Collapsed" Background="{StaticResource AppBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Details Toolbar -->
            <Grid Grid.Row="0" Padding="16" Background="{StaticResource CardBackgroundBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="BackToProjectsButton" Click="BackToProjectsButton_Click" Background="Transparent" BorderThickness="0" Padding="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                </Button>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                    <TextBlock x:Name="ProjectNameTitle" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                </StackPanel>
                
                 <Button Grid.Column="2" Click="CreatePalette_Click" Style="{StaticResource AccentButtonStyle}" Padding="8,4" FontSize="12">
                     <StackPanel Orientation="Horizontal" Spacing="4">
                        <FontIcon Glyph="&#xE710;" FontSize="12"/>
                        <TextBlock Text="Add Palette"/>
                     </StackPanel>
                </Button>
            </Grid>

            <!-- Palettes List (Rows of Colors) -->
            <ListView x:Name="ProjectPalettesList" Grid.Row="1" Padding="16" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Header: Name + Menu -->
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock 
                                    Text="{Binding Name}" 
                                    FontSize="14" 
                                    FontWeight="SemiBold" 
                                    Foreground="{StaticResource TextFillColorPrimaryBrush}"/>

                                <Button 
                                    Grid.Column="1"
                                    Content="&#xE712;" 
                                    FontFamily="Segoe MDL2 Assets"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    FontSize="12"
                                    Padding="4"
                                    MinHeight="24"
                                    Flyout="{StaticResource PaletteMenuFlyout}"/>
                            </Grid>

                            <!-- Colors Row -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding ColorsPreview}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border 
                                            Width="32" 
                                            Height="32" 
                                            Background="{Binding WindowsColor}"
                                            ToolTipService.ToolTip="{Binding HexColor}">
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                 <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            
            <!-- Empty State for Details -->
            <StackPanel x:Name="EmptyPalettesState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                 <TextBlock Text="No palettes in this project" Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

        </Grid>
    </Grid>


</Page>
