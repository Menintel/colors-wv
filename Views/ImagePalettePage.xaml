<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="colors.Views.ImagePalettePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:colors.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Padding="16" Background="Transparent">
            <StackPanel>
                <TextBlock Text="Create Palette" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                <TextBlock x:Name="ProjectNameText" Foreground="{StaticResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,2,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="16" Spacing="24">

                <!-- Step 1: Upload Image -->
                <StackPanel x:Name="Step1_Upload" Spacing="12">
                    <TextBlock Text="1. Upload Image" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                    
                    <StackPanel 
                        x:Name="UploadArea"
                        Background="{StaticResource CardBackgroundBrush}" 
                        Padding="24" 
                        CornerRadius="8"
                        BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                        
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <TextBlock 
                                Text="ðŸ“" 
                                FontSize="32" 
                                HorizontalAlignment="Center"/>
                            <TextBlock 
                                Text="Tap to choose image" 
                                FontSize="14"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
                            <Button 
                                x:Name="UploadImageButton"
                                Content="Browse" 
                                Click="UploadImageButton_Click"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Selected Image Preview -->
                    <Grid x:Name="ImagePreviewContainer" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image 
                            x:Name="SelectedImage"
                            Grid.Row="0"
                            MaxWidth="360"
                            MaxHeight="250"
                            Stretch="Uniform"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,12"
                            PointerPressed="SelectedImage_PointerPressed"
                            PointerMoved="SelectedImage_PointerMoved"/>

                        <StackPanel Grid.Row="1" Spacing="4">
                            <TextBlock Text="âœ“ Image loaded" FontSize="14" FontWeight="SemiBold" Foreground="Green" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ImageFileName" Foreground="{StaticResource TextFillColorSecondaryBrush}" FontSize="12" HorizontalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="Tap image to pick manually" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextFillColorTertiaryBrush}"/>
                            <TextBlock x:Name="PickedColorPreview" Margin="0,8,0,0" Visibility="Collapsed" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- Step 2: Extract Colors -->
                <StackPanel x:Name="Step2_Extract" Visibility="Collapsed" Spacing="12">
                    <TextBlock Text="2. Extract Colors" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                    
                    <StackPanel 
                        Background="{StaticResource CardBackgroundBrush}" 
                        Padding="16" 
                        CornerRadius="8"
                        Spacing="12">
                        
                        <TextBlock Text="Color Count" Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                            <RadioButton x:Name="Radio4" Content="4" GroupName="ColorCount" IsChecked="True"/>
                            <RadioButton x:Name="Radio6" Content="6" GroupName="ColorCount"/>
                            <RadioButton x:Name="Radio8" Content="8" GroupName="ColorCount"/>
                        </StackPanel>

                        <Button 
                            x:Name="ExtractColorsButton"
                            Content="Extract Colors" 
                            Click="ExtractColorsButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"/>

                        <ProgressRing 
                            x:Name="ExtractionProgress"
                            IsActive="False"
                            Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

                <!-- Step 3: Preview & Edit Colors -->
                <StackPanel x:Name="Step3_Preview" Visibility="Collapsed" Spacing="12">
                    <Grid>
                        <TextBlock Text="3. Review &amp; Edit" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                        <Button Content="Add Manual" Click="AddColorManually_Click" HorizontalAlignment="Right" FontSize="12" Padding="8,4" MinHeight="24"/>
                    </Grid>

                    <ItemsControl x:Name="ExtractedColorsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                    Margin="0,0,0,8" 
                                    Padding="12" 
                                    Background="{StaticResource CardBackgroundBrush}" 
                                    CornerRadius="8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Color Swatch -->
                                    <Border 
                                        Grid.Column="0"
                                        Width="48" 
                                        Height="48" 
                                        CornerRadius="6"
                                        Margin="0,0,12,0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding WindowsColor}"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Color Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                        <TextBlock Text="{Binding HexColor}" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                                        <TextBox 
                                            Text="{Binding Description, Mode=TwoWay}" 
                                            PlaceholderText="Description"
                                            HorizontalAlignment="Stretch"
                                            FontSize="12"
                                            Padding="6,4"
                                            MinHeight="28"/>
                                    </StackPanel>

                                    <!-- Remove Button -->
                                    <Button 
                                        Grid.Column="2"
                                        Content="âœ•"
                                        Click="RemoveColor_Click"
                                        Tag="{Binding}"
                                        Margin="8,0,0,0"
                                        Background="Transparent"
                                        BorderThickness="0"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Step 4: Save Palette -->
                <StackPanel x:Name="Step4_Save" Visibility="Collapsed" Spacing="12">
                    <TextBlock Text="4. Save Palette" FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextFillColorPrimaryBrush}"/>
                    
                    <StackPanel 
                        Background="{StaticResource CardBackgroundBrush}" 
                        Padding="16" 
                        CornerRadius="8"
                        Spacing="12">
                        
                        <TextBox 
                            x:Name="PaletteNameBox"
                            Header="Palette Name"
                            PlaceholderText="e.g., Brand Colors"
                            HorizontalAlignment="Stretch"/>

                        <StackPanel Spacing="8">
                            <Button 
                                x:Name="SavePaletteButton"
                                Content="Save Palette" 
                                Click="SavePaletteButton_Click"
                                Style="{StaticResource AccentButtonStyle}"
                                HorizontalAlignment="Stretch"/>
                        </StackPanel>

                        <ProgressRing 
                            x:Name="SavingProgress"
                            IsActive="False"
                            Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
