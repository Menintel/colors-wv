<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF101010"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FF1C1C1C"/>
    <SolidColorBrush x:Key="CardStrokeColorDefaultBrush" Color="#FF2C2C2C"/>
    
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="#FF6C63FF"/>
    <SolidColorBrush x:Key="PrimaryActionHoverBrush" Color="#FF5A52D5"/>
    
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#FFB0B0B0"/>
    <SolidColorBrush x:Key="TextFillColorTertiaryBrush" Color="#FF808080"/>

    <!-- Gradients (Example usage: Background="{StaticResource PremiumGradientBrush}") -->
    <LinearGradientBrush x:Key="PremiumGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6C63FF" Offset="0"/>
        <GradientStop Color="#FF8E2DE2" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>
