<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{ThemeResource SystemChromeMediumColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{ThemeResource SystemChromeLowColor}"/>
    <SolidColorBrush x:Key="PrimaryActionBrush" Color="{ThemeResource SystemAccentColor}"/>
    
    <!-- Custom Brand Colors can be added here -->
    
</ResourceDictionary>
